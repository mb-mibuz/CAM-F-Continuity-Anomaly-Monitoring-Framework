# Frontend Environment Variables
# Copy this file to .env.local for local development

# API Configuration
VITE_API_BASE_URL=http://127.0.0.1:8000
VITE_API_TIMEOUT=30000

# SSE Configuration
VITE_SSE_URL=http://127.0.0.1:8000/api/sse
VITE_SSE_RECONNECT_DELAY=1000
VITE_SSE_MAX_RECONNECT_DELAY=30000

# Polling Configuration
VITE_POLLING_INTERVAL=1000

# Frame Configuration
VITE_FRAME_CACHE_SIZE=50
VITE_FRAME_PRELOAD_COUNT=5

# Upload Configuration
VITE_MAX_UPLOAD_SIZE=5368709120

# Debug Configuration
VITE_DEBUG_MODE=false
VITE_LOG_LEVEL=warn
VITE_SHOW_DEV_TOOLS=false

# Feature Flags
VITE_FEATURE_EXPERIMENTAL_DETECTORS=false
VITE_FEATURE_BATCH_PROCESSING=true
VITE_FEATURE_ADVANCED_EXPORT=true
VITE_FEATURE_MULTI_USER=false